version: '3'
services:
{% if use_rds|upper == 'FALSE' %}
  mariadb:
    image: 'bitnami/mariadb:10.5'
    deploy:
      restart_policy:
        condition: on-failure
    environment:
      - MARIADB_DATABASE={{ mariadb_dbname }}
      - MARIADB_USER={{ mariadb_user }}
      - MARIADB_PASSWORD={{ mariadb_password }}
      - MARIADB_ROOT_PASSWORD={{ mariadb_root_password }}
    volumes:
      - 'mariadb_data:/bitnami/mariadb'
{% endif %}
  redmine:
    image: 'manuelchichi/redmine:4.1.1'
    deploy:
      restart_policy:
        condition: on-failure
    environment:
      - DB_HOST={{ mariadb_host }}
      - DB_NAME={{ mariadb_dbname }}
      - DB_USER={{ mariadb_user }}
      - DB_PASSWORD={{ mariadb_password }}
    volumes:
      - 'redmine_data:/var/www/redmine/files'
  web:
    image: 'manuelchichi/nginx-redmine:4.1.1'
    deploy:
      restart_policy:
        condition: on-failure
    environment:
      - APP_HOST=redmine
      - APP_PORT=3000
    ports:
      - '80:80'
  rdiffbackups:
    image: 'manuelchichi/rdiff-backup:alpine'
    deploy:
      restart_policy:
        condition: on-failure
    volumes:
      - 'redmine_data:/volume'
      - '/backups:/backups'
volumes:
{% if use_rds|upper == 'FALSE' %}
  mariadb_data:
    driver: local
{% endif %}
  redmine_data:
    driver: local
